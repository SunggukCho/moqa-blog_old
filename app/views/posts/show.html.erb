<%= render 'navbar' %>
<div id="blog" class="section md-padding">
		<!-- Container -->
		<div class="container">
			<!-- Row -->
			<div class="row">
				<!-- Main -->
				<main id="main" class="col-md-10">
					<div class="blog">
						<h2><%= @post.title %></h2>
						<h5><%= @post.created_at %></h5>
					  <div class="card post" data-post-id="<%= @post.id %>"> 
			              <div class="card-image">
			               <% if @post.image.url %> 
			                 <img src="<%= @post.image.url %>" /> 
			               <% end %> 
			              </div>
						</div>
						<div class="blog-content-post">
							<p><%= @post.content %></p>
						</div>
						<!-- blog tags -->
						<div class="blog-tags">
  						<span>Tags :</span>
	  						<% @post.tag_list.each do |tag| %>
	  							<div class="blog-tags-icon"><i class="fa fa-tag"></i><%= tag %></div>
							<% end %>
						</div>
						<!-- blog tags -->
						<!--List, edit, destroy-->
					<br>
						<div class="blog-tags-plus">
						  <%= link_to '목록으로', posts_path %>
						<% if can? :update, @post %>  
			              <%= link_to 'Edit', edit_post_path(@post) %> 
			              <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %> 
						<% end %>
						</div>	
					<br>
					<!--Disqus 댓글-->
					<div id="disqus_thread"></div>
					<script>
					
